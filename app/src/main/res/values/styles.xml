<?xml version="1.1" encoding="utf-8"?>
<resources>
    <style name="Launch" >
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/launcher_layout</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MiColorPrimary</item>
        <item name="colorPrimaryDark">@color/MiColorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="elevation">0dp</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popupmenuText</item>

    </style>

    <style name="AppTheme.Main" parent="AppTheme.Base">
        <item name="actionOverflowButtonStyle">@style/MainOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/MainOverflowMenuStyle</item>
    </style>

    <style name="MainOverflowButtonStyle" >
        <item name="android:src">@drawable/ic_more</item>
        <item name="android:paddingRight">25dp</item>   //overflow图标右边距
    </style>

    <style name="MainOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  //不遮挡
        <item name="android:popupBackground">@drawable/round_view</item> //圆角
        <item name="android:dropDownVerticalOffset">15dp</item>
        <item name="android:dropDownHorizontalOffset">-15dp</item>  //右边距
    </style>



    <style name="popupmenuText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Add" parent="AppTheme.Base">
        <item name="actionOverflowButtonStyle">@style/AddOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/MainOverflowMenuStyle</item>
    </style>

    <style name="AddOverflowButtonStyle" >
        <item name="android:src">@drawable/ic_confirm</item> //设置overflow图标
        <item name="android:paddingEnd">15dp</item>  //overflow图标右边距
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.Base">
        <item name="actionOverflowButtonStyle">@style/DetailOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/MainOverflowMenuStyle</item>
    </style>

    <style name="DetailOverflowButtonStyle" >
        <item name="android:src">@drawable/ic_more</item> //设置overflow图标
        <item name="android:paddingEnd">15dp</item>  //overflow图标右边距
    </style>

    <style name="MainToolbarPopupTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
    </style>

    <style name="DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@color/gray</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/round_view_selected</item>
        <item name="android:longClickable">true</item>
    </style>



    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="btnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="photo_dialog" parent="android:style/Theme.Dialog">
        <!--        <item name="android:windowAnimationStyle">@style/AnimBottom</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/Primary</item>
        <!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1B1B1B</item>
    </style>
</resources>